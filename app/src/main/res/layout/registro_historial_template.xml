<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_list_sel"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal|center_vertical"
                app:srcCompat="@drawable/record"
                tools:srcCompat="@drawable/record" />

            <TextView
                android:id="@+id/tindex"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:hint="Ruta"
                    android:text="Ruta"
                    android:textColor="#000"
                    android:textSize="13dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/truta"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:hint="NOMBRE DE RUTA"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textSize="13dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:hint="Empresa"
                    android:text="Empresa"
                    android:textColor="#000"
                    android:textSize="13dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/tempresa"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:hint="NOMBRE DE RUTA"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textSize="13dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:hint="Interno"
                    android:text="Interno"
                    android:textColor="#000"
                    android:textSize="13dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/tinterno"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:hint="NOMBRE DE RUTA"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textSize="13dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:hint="Placa"
                    android:text="Placa"
                    android:textColor="#000"
                    android:textSize="13dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/tplaca"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:hint="NOMBRE DE RUTA"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textSize="13dp"
                    android:textStyle="bold"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:hint="Registro"
                    android:text="Registro"
                    android:textColor="#000"
                    android:textSize="13dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/tregistro"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:hint="NOMBRE DE RUTA"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textSize="13dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:hint="Hora Despacho"
                    android:text="Hora Despacho"
                    android:textColor="#000"
                    android:textSize="13dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/tdespacho"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:hint="NOMBRE DE RUTA"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textSize="13dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tnombre"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:ellipsize="end"
                    android:hint="Demora/Adelanto"
                    android:text="Demorado o Adelantado"
                    android:textColor="#000"
                    android:textSize="13dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/tdemorado"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:hint="NOMBRE DE RUTA"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textSize="13dp"></TextView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>