    <fragment
        android:id="@+id/nav_dias_festivos"
        android:name="sitetech.NFCcheckPoint.ui.diasFestivos.DiasFestivoFragment"
        android:label="Dias Festivos"
        tools:layout="@layout/dia_festivo_fragment" />
    <activity
        android:id="@+id/nav_configuracion"
        android:name="sitetech.NFCcheckPoint.SettingsActivity"
        android:label="Configuracion"
        tools:layout="@layout/settings_activity" />
    <fragment
        android:id="@+id/nav_puntos"
        android:name="sitetech.NFCcheckPoint.ui.puntos.PuntosFragment"
        android:label="Puntos de Control"
        tools:layout="@layout/puntos_fragmento" />
